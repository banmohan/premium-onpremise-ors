{
  "logger": {
    "level": "debug",
    "timestamp": false
  },
  "esclient": {
    "apiVersion": "7.5",
    "hosts": [
      { "host": "elasticsearch" }
    ]
  },
  "elasticsearch": {
    "settings": {
      "index": {
        "refresh_interval": "10s",
        "number_of_replicas": "0",
        "number_of_shards": "1"
      }
    }
  },
  "api": {
    "services": {
      "pip": { "url": "http://pip:4200" },
      "libpostal": { "url": "http://libpostal:4400" },
      "placeholder": { "url": "http://placeholder:4100" },
      "interpolation": { "url": "http://interpolation:4300" }
    },
    "defaultParameters": {
      "focus.point.lat": 28.00,
      "focus.point.lon": 84.00,
      "boundary.country": "NP"
    },
    "targets": {
      "auto_discover": true,
      "layers_by_source": {
        "openstreetmap": [ "venue", "address", "street" ],
        "openaddresses": [ "address" ],
        "geonames": [ "country", "region", "county", "localadmin", "locality", "neighbourhood", "venue"],
        "whosonfirst": ["locality", "county", "localadmin", "region", "country", "neighbourhood"]
      },
      "layer_aliases": {
        "coarse": ["venue", "address", "street", "locality", "county", "localadmin", "region", "country", "neighbourhood"]
      }
    },
  },
  "imports": {
    "adminLookup": {
      "enabled": true
    },
    "geonames": {
      "datapath": "/data/geonames",
      "countryCode": "NP"
    },
    "openstreetmap": {
      "download": [
        { "sourceURL": "http://download.geofabrik.de/asia/nepal-latest.osm.pbf" }
      ],
      "leveldbpath": "/tmp",
      "datapath": "/data/openstreetmap",
      "import": [{
        "filename": "nepal-latest.osm.pbf"
      }]
    },
    "openaddresses": {
      "datapath": "/data/openaddresses",
      "files": ["np/countrywide.csv"]
    },
    "polyline": {
      "datapath": "/data/polylines",
      "files": [ "extract.0sv" ]
    },
    "whosonfirst": {
      "datapath": "/data/whosonfirst",
      "importPostalcodes": true,
      "countryCode": "NP",
      "importPlace": [ "85632465" ]
    }
  }
}
